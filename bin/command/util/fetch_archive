#!/usr/bin/env bash

function fetch_archive() {
  local -r url="${1}"
  local -r name="$(basename "${url}")"

  local -r downloads_dir="${LUVER_DIR}/.downloads"
  if ! test -d "${downloads_dir}"; then
    mkdir -p "${downloads_dir}"
  fi

  curl --progress-bar --continue-at - --output "${downloads_dir}/${name}" -L "${url}"

  cp "${downloads_dir}/${name}" "${name}"

  echo "${name}"
}
